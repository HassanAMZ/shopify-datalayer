		'id' : {{customer.id | json}},
		'email_address' : {{customer.email | json}},
		'first_name'   : {{customer_address.first_name | json}},
		'last_name'    : {{customer_address.last_name | json}},
		'city'        : {{customer_address.city | json}},
		'region'    : {{customer_address.province | json}},
